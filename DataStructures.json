//Request Structure
{
    serviceRoute: {
        domain: "Domain name defined in mapping",
        service: "Service name defined in mapping"
        uuid: "Auto injected during request handling"
    },
    params: {
        key: "Data to pass in"
    }
}

//Response Structure
{
    uuid: "Request UUID",
    type: "receipt" || "response",
    success: true || false,
    //If response
    response: Object,
    //If success === false
    error: {
        code: int, //For application use
        msg: String //UI friendly
    }
}



